# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:5000
EXPO_PUBLIC_API_TIMEOUT=30000

# Development - Local Network (replace with your local IP)
# EXPO_PUBLIC_API_URL=http://192.168.1.104:5000

# Production - Deployed Backend
# EXPO_PUBLIC_API_URL=https://your-production-backend.com

# Security
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5
EXPO_PUBLIC_OTP_TIMEOUT=300000  # 5 minutes in milliseconds

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
